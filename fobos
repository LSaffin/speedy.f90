[modes]
modes = default profile

[common-variables]
$FFLAGS   = -c -fdefault-real-8 -fconvert=swap -Wall

[default]
template  = template-speedy
cflags    = $FFLAGS -Ofast

[profile]
template  = template-speedy
cflags    = $FFLAGS

[template-speedy]
colors    = True
compiler  = gnu
lflags    = -lnetcdff
include   = /usr/include

src       = ./source
target    = ./source/speedy.f90

build_dir = ./bin
mod_dir   = ./.mod
obj_dir   = ./.obj
output    = speedy