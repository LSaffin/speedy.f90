[modes]
modes = default profile intel

[common-variables]
$FFLAGSGNU   = -c -fconvert=swap -Wall
$FFLAGSINTEL = -c -convert big_endian -warn all

[default]
template  = template-speedy
compiler  = gnu
cflags    = $FFLAGSGNU -Ofast

[profile]
template  = template-speedy
compiler  = gnu
cflags    = $FFLAGSGNU

[intel]
template  = template-speedy
compiler  = ifort
cflags    = $FFLAGSINTEL -Ofast

[template-speedy]
colors    = True
lflags    = -L$NETCDF/lib
ext_libs  = netcdff
include   = $NETCDF/include

src       = ./source
target    = ./source/speedy.f90

build_dir = ./bin
mod_dir   = ./.mod
obj_dir   = ./.obj
output    = speedy